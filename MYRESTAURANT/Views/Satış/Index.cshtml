@using MYRESTAURANT.Models.Classes;
@model List<Sale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach (var s in Model)
    {
<tr>
    <td>@s.SalesId</td>
    <td>@s.Product.ProductName</td>
    <td>@s.Customer.CustomerName@s.Customer.CustomerSurName</td>
    <td>@s.Quantity</td>
    <td>@s.Price</td>
    <td>@s.Total</td>
    <td><a href="#" class="btn btn-success">Güncelle</a></td>

</tr>


    }
</table>
<a href="#" class="btn btn-outline-primary" style="margin-top:20px">Satın Al</a>


