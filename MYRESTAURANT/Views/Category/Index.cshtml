@using MYRESTAURANT.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var c in Model)
    {
    <tr>
        <td>
            @c.CategoryID
        </td>
        <td>
            @c.CategoryName
        </td>
        <td><a href="/Category/DeleteCategory/@c.CategoryID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Category/CallCategory/@c.CategoryID" class="btn btn-success">Güncelle</a></td>

    </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-outline-primary">Kategori Ekle</a>

